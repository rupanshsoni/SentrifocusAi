{
  "manifest_version": 3,
  "name": "SentriFocus AI",
  "version": "1.2",
  "description": "Real-time semantic gatekeeper with 5-second countdown.",
  "permissions": ["tabs", "storage", "webNavigation", "notifications", "alarms", "scripting"],
  "host_permissions": ["http://127.0.0.1:8000/*", "<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}